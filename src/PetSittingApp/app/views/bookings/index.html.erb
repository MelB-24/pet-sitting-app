<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Time starts</th>
      <th>Time finishes</th>
      <th>Number of dogs</th>
      <th>Sitter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.date %></td>
        <td><%= booking.time_starts %></td>
        <td><%= booking.time_finishes %></td>
        <td><%= booking.number_of_dogs %></td>
        <td><% if owner_user_signed_in? %> 
              <%= booking.approved_sitter.sitter.name %>
            <% end %>
        </td>
        <td><%= link_to 'Show', booking %></td>
        <td><% if owner_user_signed_in? %> 
          <%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
        </td>
        <td><% if sitter_user_signed_in? %> 
              <%= check_box_tag :approved_booking, checked = true %>
            <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Dashboard', owners_path %>

<% if owner_user_signed_in? %>
    <%= link_to 'New Booking', new_booking_path %> 
<% end %>  


