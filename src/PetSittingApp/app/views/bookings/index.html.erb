<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Time starts</th>
      <th>Time finishes</th>
      <th>Number of dogs</th>
      <th>Owner</th>
      <th>Sitter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.date %></td>
        <td><%= booking.time_starts %></td>
        <td><%= booking.time_finishes %></td>
        <td><%= booking.number_of_dogs %></td>
        <td><%= booking.owner %></td>
        <td><%= booking.sitter %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

