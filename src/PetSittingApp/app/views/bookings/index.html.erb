

<h1>My Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Time starts</th>
      <th>Time finishes</th>
      <th><% if owner_user_signed_in? %>Sitter<% end %></th>
      <th><% if sitter_user_signed_in? %>Approved Booking<% end %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.date %></td>
        <td><%= booking.time_starts.strftime('%H:%M') %></td>
        <td><%= booking.time_finishes.strftime('%H:%M') %></td>
        <td><% if owner_user_signed_in? %> 
              <%= booking.approved_sitter.sitter.name %>
            <% end %>
        </td>
        <td><% if owner_user_signed_in? %> 
          <%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
        </td>
        <td><% if sitter_user_signed_in? %> 
              <%= check_box_tag 'active', booking.approved_booking %>
            <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<% if sitter_user_signed_in? %> 
  <%= link_to 'Dashboard', sitters_path %>
<% elsif owner_user_signed_in? %>
  <%= link_to 'Dashboard', owners_path %>
<% end %>

<% if owner_user_signed_in? %>
    <%= link_to 'New Booking', new_booking_path %> 
<% end %>  


